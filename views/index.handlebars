<div class="container">

  <h1 class="text-center">Eat-Da-Burger!</h1>

  <center><img class="burgerimg text-center"
      src="https://media.istockphoto.com/photos/fresh-burger-isolated-picture-id1125149183?k=6&m=1125149183&s=612x612&w=0&h=KxSfVUk3KP3BgHVYboyL9aRLHp-fRYrfPcFea0w68Ow="
      width="150" height="125"></img></center>

  <div class="uneaten row justify-content-center">
    <div class="col-sm-6">
      <ol align="middle">
        {{#each burgers}}
        {{#unless eaten}}
        {{> burger/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ol>

    </div>

    <div class="col-sm-6">
      <h5>Burgers that have been eaten</h5>

      <ol class="eaten">
        {{#each burgers}}
        {{#if eaten}}
        {{> burger/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>

  </div>
  <form class="create-form">

    <div class="form-group text-center">
      <h6>Enter a burger you want to eat and click the "Submit" button</h6>
      <input type="text" id="burger" name="name">
    </div>

    <div class="text-center">
      <button type="submit">Submit</button>
    </div>

  </form>

</div>
