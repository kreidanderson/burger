<div class="container">
<h1>Eat-Da-Burger!</h1>
<div class="row">
<div class="col-md-2">
<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burger/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>
<div class="col-md-2">
<h5>Burgers that have been eaten</h5>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burger/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<form class="create-form">

  <div class="form-group">
   <h6>Enter a burger you want to eat and click the "Submit" button</h6>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
</div>
