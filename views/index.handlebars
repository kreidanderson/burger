<div class="container">
<h1 class="text-center">Eat-Da-Burger!</h1>
<img src="../public/assets/burger.png">
<div class="row justify-content-center">
<div class="col-sm-6">
<ol>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burger/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ol>

</div>
<div class="col-sm-6">
<h5>Burgers that have been eaten</h5>

<ol>
  {{#each burgers}}
    {{#if eaten}}
      {{> burger/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ol>
</div>

</div>
<form class="create-form">

  <div class="form-group text-center">
   <h6>Enter a burger you want to eat and click the "Submit" button</h6>
    <input type="text" id="burger" name="name">
  </div>

<div class="text-center">
  <button type="submit">Submit</button>
</div>

</form>
</div>
